{% doc %}
  @prompt
    quote slider with background images.
    add animations also.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-quote-slider-{{ ai_gen_id }} {
    position: relative;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    overflow: hidden;
    display: block;
  }

  .ai-quote-slider__wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.slider_height }}px;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .ai-quote-slider__slides-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .ai-quote-slider__slide-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.8s ease-in-out;
  }

  .ai-quote-slider__slide-{{ ai_gen_id }}.active {
    opacity: 1;
  }

  .ai-quote-slider__background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-quote-slider__background-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .ai-quote-slider__background-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.3;
  }

  .ai-quote-slider__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .ai-quote-slider__content-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    padding: 40px;
    text-align: center;
    z-index: 1;
  }

  .ai-quote-slider__quote-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.quote_size }}px;
    line-height: 1.4;
    margin: 0 0 20px;
    max-width: 800px;
    font-style: italic;
    transform: translateY(20px);
    opacity: 0;
    transition: transform 0.8s ease-out 0.2s, opacity 0.8s ease-out 0.2s;
  }

  .ai-quote-slider__slide-{{ ai_gen_id }}.active .ai-quote-slider__quote-{{ ai_gen_id }} {
    transform: translateY(0);
    opacity: 1;
  }

  .ai-quote-slider__author-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.author_size }}px;
    margin: 0;
    transform: translateY(20px);
    opacity: 0;
    transition: transform 0.8s ease-out 0.4s, opacity 0.8s ease-out 0.4s;
  }

  .ai-quote-slider__slide-{{ ai_gen_id }}.active .ai-quote-slider__author-{{ ai_gen_id }} {
    transform: translateY(0);
    opacity: 1;
  }

  .ai-quote-slider__controls-{{ ai_gen_id }} {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 12px;
    z-index: 2;
  }

  .ai-quote-slider__dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: {{ block.settings.text_color }};
    opacity: 0.4;
    border: none;
    cursor: pointer;
    transition: opacity 0.3s ease, transform 0.3s ease;
    padding: 0;
  }

  .ai-quote-slider__dot-{{ ai_gen_id }}:hover {
    opacity: 0.7;
    transform: scale(1.2);
  }

  .ai-quote-slider__dot-{{ ai_gen_id }}.active {
    opacity: 1;
    transform: scale(1.3);
  }

  .ai-quote-slider__nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.text_color }};
    opacity: 0.6;
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .ai-quote-slider__nav-{{ ai_gen_id }}:hover {
    opacity: 1;
    transform: translateY(-50%) scale(1.1);
  }

  .ai-quote-slider__nav-{{ ai_gen_id }}--prev {
    left: 20px;
  }

  .ai-quote-slider__nav-{{ ai_gen_id }}--next {
    right: 20px;
  }

  .ai-quote-slider__nav-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
    fill: {{ block.settings.overlay_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-quote-slider__wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.slider_height | times: 0.7 }}px;
    }

    .ai-quote-slider__content-{{ ai_gen_id }} {
      padding: 20px;
    }

    .ai-quote-slider__quote-{{ ai_gen_id }} {
      font-size: {{ block.settings.quote_size | times: 0.7 }}px;
    }

    .ai-quote-slider__author-{{ ai_gen_id }} {
      font-size: {{ block.settings.author_size | times: 0.8 }}px;
    }

    .ai-quote-slider__nav-{{ ai_gen_id }} {
      width: 40px;
      height: 40px;
    }

    .ai-quote-slider__nav-{{ ai_gen_id }}--prev {
      left: 10px;
    }

    .ai-quote-slider__nav-{{ ai_gen_id }}--next {
      right: 10px;
    }
  }
{% endstyle %}

<quote-slider-{{ ai_gen_id }} class="ai-quote-slider-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-quote-slider__wrapper-{{ ai_gen_id }}">
    <div class="ai-quote-slider__slides-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign quote_key = 'quote_' | append: i
          assign author_key = 'author_' | append: i
          assign image_key = 'background_image_' | append: i
          
          assign quote = block.settings[quote_key]
          assign author = block.settings[author_key]
          assign image = block.settings[image_key]
        %}

        {% if quote != blank %}
          <div class="ai-quote-slider__slide-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" data-slide="{{ forloop.index }}">
            {% if image %}
              <img
                src="{{ image | image_url: width: 2000 }}"
                alt="{{ image.alt | escape }}"
                loading="lazy"
                class="ai-quote-slider__background-{{ ai_gen_id }}"
              >
            {% else %}
              <div class="ai-quote-slider__background-placeholder-{{ ai_gen_id }}">
                {{ 'hero-apparel-1' | placeholder_svg_tag }}
              </div>
            {% endif %}

            <div class="ai-quote-slider__overlay-{{ ai_gen_id }}"></div>

            <div class="ai-quote-slider__content-{{ ai_gen_id }}">
              <blockquote class="ai-quote-slider__quote-{{ ai_gen_id }}">
                "{{ quote }}"
              </blockquote>
              {% if author != blank %}
                <p class="ai-quote-slider__author-{{ ai_gen_id }}">â€” {{ author }}</p>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <button
      class="ai-quote-slider__nav-{{ ai_gen_id }} ai-quote-slider__nav-{{ ai_gen_id }}--prev"
      aria-label="Previous quote"
    >
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
      </svg>
    </button>

    <button
      class="ai-quote-slider__nav-{{ ai_gen_id }} ai-quote-slider__nav-{{ ai_gen_id }}--next"
      aria-label="Next quote"
    >
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/>
      </svg>
    </button>

    <div class="ai-quote-slider__controls-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign quote_key = 'quote_' | append: i
          assign quote = block.settings[quote_key]
        %}
        {% if quote != blank %}
          <button
            class="ai-quote-slider__dot-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
            data-slide="{{ forloop.index }}"
            aria-label="Go to quote {{ forloop.index }}"
          ></button>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</quote-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class QuoteSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 1;
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.slides = this.querySelectorAll('.ai-quote-slider__slide-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-quote-slider__dot-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-quote-slider__nav-{{ ai_gen_id }}--prev');
        this.nextButton = this.querySelector('.ai-quote-slider__nav-{{ ai_gen_id }}--next');
        this.totalSlides = this.slides.length;

        if (this.totalSlides === 0) return;

        this.setupEventListeners();
        this.startAutoplay();
      }

      setupEventListeners() {
        this.prevButton.addEventListener('click', () => {
          this.goToSlide(this.currentSlide - 1);
          this.resetAutoplay();
        });

        this.nextButton.addEventListener('click', () => {
          this.goToSlide(this.currentSlide + 1);
          this.resetAutoplay();
        });

        this.dots.forEach((dot) => {
          dot.addEventListener('click', (e) => {
            const slideNumber = parseInt(e.target.dataset.slide);
            this.goToSlide(slideNumber);
            this.resetAutoplay();
          });
        });
      }

      goToSlide(slideNumber) {
        if (slideNumber < 1) {
          slideNumber = this.totalSlides;
        } else if (slideNumber > this.totalSlides) {
          slideNumber = 1;
        }

        this.slides.forEach((slide) => {
          slide.classList.remove('active');
        });

        this.dots.forEach((dot) => {
          dot.classList.remove('active');
        });

        const targetSlide = this.querySelector(`[data-slide="${slideNumber}"].ai-quote-slider__slide-{{ ai_gen_id }}`);
        const targetDot = this.querySelector(`[data-slide="${slideNumber}"].ai-quote-slider__dot-{{ ai_gen_id }}`);

        if (targetSlide) {
          targetSlide.classList.add('active');
        }

        if (targetDot) {
          targetDot.classList.add('active');
        }

        this.currentSlide = slideNumber;
      }

      startAutoplay() {
        const autoplayEnabled = {{ block.settings.autoplay }};
        const autoplaySpeed = {{ block.settings.autoplay_speed }} * 1000;

        if (autoplayEnabled && this.totalSlides > 1) {
          this.autoplayInterval = setInterval(() => {
            this.goToSlide(this.currentSlide + 1);
          }, autoplaySpeed);
        }
      }

      resetAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.startAutoplay();
        }
      }

      disconnectedCallback() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
        }
      }
    }

    customElements.define('quote-slider-{{ ai_gen_id }}', QuoteSlider{{ ai_gen_id }});
  })();
</script>

