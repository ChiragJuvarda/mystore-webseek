{% doc %}
  @prompt
    create full width banner slider with animation and hover settings, remove this titles and other text
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-banner-slider-{{ ai_gen_id }} {
    display: block;
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-banner-slider__wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.slider_height }}px;
  }

  .ai-banner-slider__track-{{ ai_gen_id }} {
    display: flex;
    height: 100%;
    transition: transform {{ block.settings.transition_speed }}s ease-in-out;
  }

  .ai-banner-slider__slide-{{ ai_gen_id }} {
    min-width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
  }

  .ai-banner-slider__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform {{ block.settings.hover_zoom_duration }}s ease;
  }

  {% if block.settings.enable_hover_zoom %}
    .ai-banner-slider__slide-{{ ai_gen_id }}:hover .ai-banner-slider__image-{{ ai_gen_id }} {
      transform: scale({{ block.settings.hover_zoom_scale }});
    }
  {% endif %}

  .ai-banner-slider__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-banner-slider__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-banner-slider__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity }};
    z-index: 1;
    transition: opacity {{ block.settings.hover_overlay_duration }}s ease;
  }

  {% if block.settings.enable_hover_overlay %}
    .ai-banner-slider__slide-{{ ai_gen_id }}:hover .ai-banner-slider__overlay-{{ ai_gen_id }} {
      opacity: {{ block.settings.hover_overlay_opacity }};
    }
  {% endif %}

  .ai-banner-slider__controls-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
    z-index: 3;
  }

  .ai-banner-slider__dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    opacity: 0.5;
    cursor: pointer;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .ai-banner-slider__dot-{{ ai_gen_id }}.active {
    opacity: 1;
    transform: scale(1.2);
  }

  .ai-banner-slider__arrow-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.arrow_bg_color }};
    color: {{ block.settings.arrow_color }};
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    z-index: 3;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    opacity: {{ block.settings.arrow_opacity }};
  }

  .ai-banner-slider__arrow-{{ ai_gen_id }}:hover {
    opacity: 1;
    transform: translateY(-50%) scale(1.1);
  }

  .ai-banner-slider__arrow--prev-{{ ai_gen_id }} {
    left: 20px;
  }

  .ai-banner-slider__arrow--next-{{ ai_gen_id }} {
    right: 20px;
  }

  @media screen and (max-width: 749px) {
    .ai-banner-slider__wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.slider_height | times: 0.6 }}px;
    }

    .ai-banner-slider__arrow-{{ ai_gen_id }} {
      width: 40px;
      height: 40px;
    }
  }
{% endstyle %}

<banner-slider-{{ ai_gen_id }} class="ai-banner-slider-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-banner-slider__wrapper-{{ ai_gen_id }}">
    <div class="ai-banner-slider__track-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign image_key = 'slide_' | append: i | append: '_image'
          assign slide_image = block.settings[image_key]
        %}

        <div class="ai-banner-slider__slide-{{ ai_gen_id }}" data-slide="{{ i }}">
          {% if slide_image %}
            <img
              src="{{ slide_image | image_url: width: 2000 }}"
              alt="{{ slide_image.alt | escape }}"
              loading="lazy"
              width="{{ slide_image.width }}"
              height="{{ slide_image.height }}"
              class="ai-banner-slider__image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-banner-slider__image-placeholder-{{ ai_gen_id }}">
              {{ 'hero-apparel-1' | placeholder_svg_tag }}
            </div>
          {% endif %}

          <div class="ai-banner-slider__overlay-{{ ai_gen_id }}"></div>
        </div>
      {% endfor %}
    </div>

    {% if block.settings.show_arrows %}
      <button class="ai-banner-slider__arrow-{{ ai_gen_id }} ai-banner-slider__arrow--prev-{{ ai_gen_id }}" aria-label="Previous slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>
      <button class="ai-banner-slider__arrow-{{ ai_gen_id }} ai-banner-slider__arrow--next-{{ ai_gen_id }}" aria-label="Next slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    {% endif %}

    {% if block.settings.show_dots %}
      <div class="ai-banner-slider__controls-{{ ai_gen_id }}">
        {% for i in (1..3) %}
          <button class="ai-banner-slider__dot-{{ ai_gen_id }} {% if i == 1 %}active{% endif %}" data-slide="{{ i }}" aria-label="Go to slide {{ i }}"></button>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</banner-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class BannerSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 3;
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-banner-slider__track-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-banner-slider__dot-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-banner-slider__arrow--prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-banner-slider__arrow--next-{{ ai_gen_id }}');

        this.setupEventListeners();
        
        {% if block.settings.enable_autoplay %}
          this.startAutoplay();
        {% endif %}
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.previousSlide());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.nextSlide());
        }

        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => this.goToSlide(index));
        });

        {% if block.settings.enable_autoplay and block.settings.pause_on_hover %}
          this.addEventListener('mouseenter', () => this.stopAutoplay());
          this.addEventListener('mouseleave', () => this.startAutoplay());
        {% endif %}
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateSlider();
      }

      nextSlide() {
        this.currentSlide = (this.currentSlide + 1) % this.totalSlides;
        this.updateSlider();
      }

      previousSlide() {
        this.currentSlide = (this.currentSlide - 1 + this.totalSlides) % this.totalSlides;
        this.updateSlider();
      }

      updateSlider() {
        const offset = -this.currentSlide * 100;
        this.track.style.transform = `translateX(${offset}%)`;

        this.dots.forEach((dot, index) => {
          if (index === this.currentSlide) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }

      startAutoplay() {
        {% if block.settings.enable_autoplay %}
          this.stopAutoplay();
          this.autoplayInterval = setInterval(() => {
            this.nextSlide();
          }, {{ block.settings.autoplay_speed }} * 1000);
        {% endif %}
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('banner-slider-{{ ai_gen_id }}', BannerSlider{{ ai_gen_id }});
  })();
</script>

